    // Sample dynamic recommendations (you can fetch these from a server)
    var recommendations = ["Software Engineer", "Graphic Designer", "Data Scientist", "Teacher"];

    // Function to populate dynamic recommendations
    function populateRecommendations() {
        var recommendationsContainer = document.getElementById('dynamic-recommendations');

        // Clear previous recommendations
        recommendationsContainer.innerHTML = '';

        // Add recommendations to the container
        recommendations.forEach(function(recommendation) {
            var recommendationElement = document.createElement('button');
            recommendationElement.classList.add('recommendation');
            recommendationElement.textContent = recommendation;
            recommendationElement.addEventListener('click', function() {
                document.getElementById('goals').value = recommendation;
            });
            recommendationsContainer.appendChild(recommendationElement);
        });
    }

    // Populate recommendations on page load
    populateRecommendations();

    document.addEventListener('DOMContentLoaded', function () {
            var checkboxes = document.querySelectorAll('.checkbox-label input');
            var inputField = document.getElementById('skill');

            checkboxes.forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    updateSelectedSkills();
                });
            });

            function updateSelectedSkills() {
                var selectedSkills = Array.from(checkboxes)
                    .filter(function (checkbox) {
                        return checkbox.checked;
                    })
                    .map(function (checkbox) {
                        return checkbox.value;
                    });

                inputField.value = selectedSkills.join(', ');
            }
        });
    </script>
